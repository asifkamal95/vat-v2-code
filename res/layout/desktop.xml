		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dip"		
		 android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg" 
	    android:layout_marginRight="5dip">
        
		<ImageView     
			android:id="@+id/list_reset"   
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:contentDescription="@string/hello_world"
	        android:src="@drawable/settings"/>
        
	</LinearLayout>
    
	<!-- Title Of Song-->
    <TextView
        android:id="@+id/titlereset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnailreset"
        android:layout_toRightOf="@+id/thumbnailreset"
        android:layout_marginLeft="5dip"
        android:textColor="#ffffff"
        android:typeface="sans" 
        android:text="Please Rate US"
        android:textSize="21sp"/>

	<!-- Artist Name -->
    <TextView
        android:id="@+id/sdetailsreset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlereset"
        android:textColor="#c8c8c8"
        android:text="Please do support us. Rate us and give your opinion on Google Play."
        android:textSize="17sp"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/thumbnailreset"/>
    
    
    
    
            <Button
        android:id="@+id/clearreset"
        android:text="Rate Us"
        android:textColor="#666666"
        android:layout_below="@id/sdetailsreset"
        android:layout_toRightOf="@+id/thumbnailreset"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dip"
        android:visibility="visible"
       android:background="@drawable/gray_button"
        android:contentDescription="Favourite"
        android:src="@drawable/ic_action_important_black" />
    
    


</RelativeLayout>
      

      
      
      
      
    
