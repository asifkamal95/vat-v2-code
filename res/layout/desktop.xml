           <RelativeLayout
          android:id="@+id/cacheSetting" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

	<!--  ListRow Left sied Thumbnail image -->
	<LinearLayout android:id="@+id/thumbnailcache" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dip"	
		 android:visibility="gone"	
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg" 
	    android:layout_marginRight="5dip">
        
		<ImageView     
			android:id="@+id/list_image_cache"   
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:contentDescription="@string/hello_world"
	        android:src="@drawable/no_image"/>
        
	</LinearLayout>
    
	<!-- Title Of Song-->
    <TextView
        android:id="@+id/titlecache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnailcache"
        android:layout_toRightOf="@+id/thumbnailcache"
        android:layout_marginLeft="5dip"
        android:textColor="#ffffff"
        android:typeface="sans" 
        android:text="Interested in Stock Market?"
        android:textSize="21sp"/>

	<!-- Artist Name -->
    <TextView
        android:id="@+id/sdetailscache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlecache"
        android:textColor="#c8c8c8"
        android:text="DSE Alarm is the BEST mobile application for Dhaka Stock Exchange.\n\nMake your stock invest fun and easy!"
        android:textSize="17sp"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/thumbnailcache"/>
    
    
    
    
            <Button
        android:id="@+id/clearcurves"
        android:text="Get @ DSE Alarm @ "
        android:textColor="#666666"
        android:layout_below="@id/sdetailscache"
        android:layout_toRightOf="@+id/thumbnailcache"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dip"
        android:visibility="visible"
       android:background="@drawable/gray_button"
        android:contentDescription="Favourite"
        android:src="@drawable/ic_action_important_black" />
    
    


</RelativeLayout>
      
      
      

           
           

           
           
           
           
           
