<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#4e97ce" />
             <gradient  android:angle="-90"  
                 android:startColor="#10429c"
                  android:centerColor="#357EC7"
        android:endColor="#3090C7"
                   />            
         </shape>
     </item>
	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#4e97ce" />
             <gradient  android:angle="-90"  android:startColor="#10429c" android:endColor="#3c7fc6" />            
         </shape>
     </item>
</selector> 