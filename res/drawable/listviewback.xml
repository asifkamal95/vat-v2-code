<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-1dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="-1dp">

        <shape android:shape="rectangle">
            <gradient  android:angle="-90"  android:startColor="#99ffffff" android:endColor="#99ffffff" /> 
            <stroke
                android:width="1dp"
                android:color="#cccccc"/>
            
            
            <corners
